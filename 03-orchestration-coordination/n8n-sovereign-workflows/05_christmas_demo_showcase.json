        "abort_if": "torsion > 0.05 (misalignment detected)"
      },
      {
        "step": "8_synthesis_and_proof",
        "action": "Combine results + generate geometry lock",
        "synthesis": "POST /synthesize with all agent outputs",
        "proof": "SHA256 hash of full execution trace",
        "broadcast": "'Solution synthesized. Generating cryptographic proof...'"
      },
      {
        "step": "9_axiom_check",
        "action": "Query: Have we solved this pattern before?",
        "redis_query": "HGET axioms:{{domain}} {{pattern_hash}}",
        "if_found": "Show: 'Similar problem solved previously in {{previous_time}} - using proven approach'",
        "if_novel": "Show: 'Novel breakthrough! Adding to axiom library'"
      },
      {
        "step": "10_final_presentation",
        "action": "Rich formatted response to user",
        "output": {
          "breakthrough_solution": "{{synthesis_result}}",
          "confidence_score": "{{validation_confidence}}",
          "time_to_solve": "{{end_time - start_time}}",
          "agents_used": "{{agent_list}}",
          "torsion_final": "{{final_torsion}}",
          "proof_hash": "{{geometry_lock}}",
          "stakeholder_analysis": {
            "supporters": "who would approve this solution",
            "skeptics": "who would doubt this solution", 
            "validators": "how they would verify correctness"
          },
          "implementation_steps": "ordered action list",
          "future_proofing": "potential issues prevented"
        }
      },
      {
        "step": "11_offer_recursion",
        "action": "Present follow-up options",
        "options": [
          "Dive deeper into {{specific_aspect}}",
          "Generate implementation code",
          "Validate with different stakeholder perspective",
          "Apply to related problem domain",
          "Export as shareable framework"
        ]
      }
    ]
  },
  "configuration": {
    "demo_url": "http://localhost:8000/demo",
