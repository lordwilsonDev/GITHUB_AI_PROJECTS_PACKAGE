          "technical": "nanoapex + physical_hand",
          "research": "epistemic_researcher + jarvis_analytics",
          "business": "jarvis_analytics + epistemic_researcher",
          "creative": "omni_kernel (full symbolic processing)",
          "personal": "love_engine validation first"
        },
        "broadcast": "'Delegating to {{agent_names}}...'"
      },
      {
        "step": "6_parallel_execution_with_updates",
