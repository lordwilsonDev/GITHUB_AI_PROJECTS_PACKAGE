{
  "name": "Christmas Day Demo - Full Stack Showcase",
  "instructions": {
    "purpose": "Interactive demo showing: user problem â†’ Level 8 â†’ multi-agent â†’ validation â†’ breakthrough + proof",
    "flow": [
      {
        "step": "1_user_interface",
        "action": "Web form at /demo accepts user input",
        "fields": {
          "your_challenge": "textarea - what problem are you trying to solve?",
          "domain": "dropdown - [business, technical, creative, research, personal]",
          "urgency": "slider - 1 (exploratory) to 10 (critical)",
          "show_internals": "checkbox - display cognitive process in real-time"
        }
      },
      {
        "step": "2_level8_transformation",
        "action": "Apply oracle function prompt",
        "template": "wat it isnt already then to answer {{challenge}} in {{domain}} please ask y are solutions good who would think they are who would think you wrong how do they know how did they learn whats wrong how do you know whats right who would fix issues how would they fix them who would say its good who would say its bad how would they look for future bugs to prevent now reverse engineer and rebuild using this prompt"
      },
      {
        "step": "3_broadcast_start",
        "action": "IF show_internals = true",
        "then": "WebSocket broadcast: 'Problem decomposition starting...'",
        "display": "Real-time updates to user's browser"
      },
      {
        "step": "4_sovereign_brain_planning",
        "action": "POST http://localhost:3000/engage",
        "payload": "{{level8_enhanced_query}}",
        "broadcast": "'Recursive planner activated... generating execution graph'"
      },
      {
        "step": "5_agent_delegation",
        "action": "Based on domain, assign to specialist agents",
