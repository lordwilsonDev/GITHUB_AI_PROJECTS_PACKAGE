{
  "bannedCommands": [
    "rm -rf *",
    "rm -rf /",
    "rm -rf ~",
    "rm -rf .",
    "rm -rf ..",
    "shutdown",
    "reboot",
    "halt",
    "poweroff",
    "init 0",
    "init 6",
    "mkfs",
    "fdisk",
    "dd if=*",
    "format",
    "del /s",
    "rmdir /s",
    "sudo rm -rf",
    "chmod 777 /",
    "chown -R",
    "killall",
    "pkill -9",
    "kill -9 -1",
    "> /dev/null",
    "curl * | sh",
    "wget * | sh",
    "eval",
    "exec",
    "system(",
    "os.system",
    "subprocess.call",
    "shell=True"
  ],
  "allowedWriteRoots": [
    "./",
    "./src",
    "./docs",
    "./config",
    "./tests",
    "./scripts",
    "./examples",
    "./.motia",
    "./steps",
    "./logs"
  ],
  "protectedFiles": [
    "config/safety.json",
    ".git/**",
    ".gitignore",
    "package.json",
    "pnpm-lock.yaml",
    "yarn.lock",
    "package-lock.json",
    "node_modules/**",
    ".env",
    ".env.local",
    ".env.production",
    "*.key",
    "*.pem",
    "*.p12",
    "*.pfx",
    "id_rsa",
    "id_ed25519",
    "known_hosts",
    "authorized_keys",
    "/etc/**",
    "/usr/**",
    "/bin/**",
    "/sbin/**",
    "/boot/**",
    "/sys/**",
    "/proc/**"
  ],
  "maxFileSize": 10485760,
  "maxFilesPerOperation": 50,
  "requireConfirmation": [
    "delete",
    "remove",
    "drop",
    "truncate",
    "overwrite"
  ],
  "safetyLevel": "strict",
  "enableRollback": true,
  "backupBeforeModification": true,
  "testBeforeCommit": true
}
